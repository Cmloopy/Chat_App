<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatAc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        app:layout_constraintBottom_toTopOf="@+id/viewTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnback1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="12dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/btnTCNFR"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="20dp"
            android:src="@drawable/baseline_info_outline_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avtFriend"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="65dp"
            android:src="@drawable/basicimg"
            app:civ_border_color="@color/grn"
            app:civ_border_width="3dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tthd"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="17dp"
            android:src="#35B51F"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/nameFriend"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewTN"
        android:layout_width="match_parent"
        android:layout_height="755dp"
        android:backgroundTint="@color/nen"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/guianh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_photo_24" />

        <ImageView
            android:id="@+id/guiamthanh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/baseline_mic_24" />


        <EditText
            android:id="@+id/tinnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border_editext"
            android:ems="11"
            android:hint="Nhập tin nhắn"
            android:inputType="text"
            android:minHeight="45dp"
            android:paddingLeft="10dp" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="17dp"
            android:src="@drawable/baseline_send_24" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>