<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FriendProfileAc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <ImageView
            android:id="@+id/FrCoverIMG"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/biamau" />

        <ImageView
            android:id="@+id/Frback"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/baseline_arrow_back_24"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/FrProfileIMG"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:layout_marginRight="100dp"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/basicimg"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white" />

        <TextView
            android:id="@+id/FrFullname"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/bb"
            android:layout_marginLeft="50dp"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="  Bạn bè"
            android:textColor="@color/nen"
            android:textSize="18dp"
            android:drawableEnd="@drawable/baseline_check_24"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/xacnhanketban"
            android:layout_marginLeft="50dp"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="Xác nhận"
            android:textColor="@color/nen"
            android:textSize="18dp"
            android:visibility="gone"
            android:background="@color/black"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/guiloimoi"
            android:layout_marginLeft="50dp"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:text="Thêm bạn bè"
            android:textColor="@color/nen"
            android:textSize="18dp"
            android:visibility="gone"
            android:background="@color/black"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/huyloimoi"
            android:layout_marginLeft="50dp"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:text="Hủy lời mời"
            android:visibility="gone"
            android:textColor="@color/nen"
            android:textSize="18dp"

            android:background="@color/black"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnFrChat"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Nhắn tin"
            android:textSize="18dp"
            android:background="@drawable/border_button"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Giới Tính"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/FrSex"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/FrDob"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/FrAddress"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/FrPhone"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Bạn Bè"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/FrFriend"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>