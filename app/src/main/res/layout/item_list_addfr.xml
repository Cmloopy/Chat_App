<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:backgroundTint="@color/nen"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgadd"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/grn"
        android:src="@drawable/basicimg"/>

    <TextView
        android:id="@+id/fullnameadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="18dp"
        android:text="Dang Minh Anh"/>

    <Button
        android:id="@+id/btnXNKB"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="125dp"
        android:text="Chấp nhận"/>

    <Button
        android:id="@+id/btnHUY"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="270dp"
        android:background="@color/gr"
        android:text="Hủy"/>

    <TextView
        android:id="@+id/trangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="Các bạn đã trở thành bạn bè!"/>

</androidx.cardview.widget.CardView>