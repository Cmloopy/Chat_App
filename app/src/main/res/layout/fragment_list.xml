<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="68dp"
    tools:context=".fragment.ListFragment">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/nen"
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Danh Bạ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="22dp"
            android:textSize="26dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/listadd"
            android:layout_gravity="right|center"
            android:layout_marginRight="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_playlist_add_24"
            app:civ_circle_background_color="@color/grn"
            app:civ_border_width="8dp"
            app:civ_border_color = "@color/grn"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/newadd"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:src="#C63939"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang hoạt động"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="22dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_bb"
        android:background="@color/nen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>